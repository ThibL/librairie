{% extends 'base.html.twig' %}

{% block title %}Hello BookController!{% endblock %}

{% block body %}
    <div class="d-flex flex-wrap m-2 p-2">
        {% for book in books %}
            <div class="card m-2" style="width: 18rem;">
                <img class="card-img-top" src="{{ book.image }}" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">{{ book.titre }}</h5>
                    <h6 class="card-title">Auteur: {{ book.author }}</h6>
                    <hr>
                    <span>ISBN: {{ book.iSBN }}</span>
                    <hr>
                    <p class="card-text mt-2">{{ book.resume | slice(0, 40) }}...</p>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <a href="{{ path('show_book', {id: book.id}) }}" class="btn btn-primary mr-auto">Voir le détail</a>
                        <span><strong>{{ book.prix }} €</strong></span>

                    </div>
                        <a href="{{ path('carte_add', {id: book.id}) }}" class="btn btn-warning mr-auto d-block btn-sm">Ajouter au panier</a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
