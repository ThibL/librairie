{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    {% if items | length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.titre }}</td>
                    <td>{{ item.product.prix }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.prix * item.quantity }} €</td>
                    <td>
                        <a href="{{ path('cart_remove', { id: item.product.id }) }}" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
            <tfott>
                <tr>
                    <td colspan="3" class="text-end">Total :</td>
                    <td>{{ total }} €</td>
                    <td></td>
                </tr>
            </tfott>
        </table>
    {% else  %}
        <p>Il n' y a rien dans votre panier</p>
     {% endif %}
{% endblock %}
