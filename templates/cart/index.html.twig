{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    <img src="{{ asset('assets/image/gradient600ppp.png') }}" class="img-fluid position-absolute top-0 start-0" alt="banner">
    {% if items | length > 0 %}

      <div class="position-relative">

          <table class="table">
              <thead>
              <tr>
                  <th>Produit</th>
                  <th>Prix</th>
                  <th>Quantité</th>
                  <th>Total</th>
                  <th></th>
              </tr>
              </thead>
              <tbody>
              {% for item in items %}
                  <tr>
                      <td>{{ item.product.titre }}</td>
                      <td>{{ item.product.prix }}</td>
                      <td>{{ item.quantity }}</td>
                      <td>{{ item.product.prix * item.quantity }} €</td>
                      <td>
                          <a href="{{ path('cart_remove', { id: item.product.id }) }}" class="btn btn-danger btn-sm">
                              <i class="fas fa-trash"></i>
                          </a>
                      </td>
                  </tr>
              {% endfor %}
              </tbody>
              <tfott>
                  <tr>
                      <td colspan="3" class="text-end">Total :</td>
                      <td>{{ total }} €</td>
                      <td></td>
                  </tr>
              </tfott>
          </table>

      </div>
    {% else  %}
        <br><br><br>
        <p class="position-relative" style="color: white">Il n' y a rien dans votre panier</p>
     {% endif %}
{% endblock %}
